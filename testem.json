{
  "framework": "mocha",
  "serve_files": [ "test/browserified.js" ],
  "src_files": [
    "src/*.js",
    "test/*_tests.js"
  ],
  "launchers": {
    "Mocha": {
      "command": "node_modules/.bin/_mocha test/*_tests.js"
    }
  },
  "on_exit": "rm test/browserified.js",
  "launch_in_dev": ["Chrome", "Mocha"]
}